<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrackCalories"
    android:orientation="vertical"
    android:background="#c4f1ff">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calorie Chart"
        android:fontFamily="@font/permanent_marker"
        android:textSize="50sp"
        android:gravity="center"
        android:layout_weight="0.25"/>

    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="300sp"
        android:id="@+id/graph"
        android:layout_gravity="center"
        android:layout_weight="0.5"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Keep a track of your calories in the last seven days and ensure you eat healthy!"
        android:fontFamily="@font/playfair_displays"
        android:layout_weight="0.25"
        android:textColor="@color/black"
        android:padding="20dp"
        android:textSize="20dp"
        android:gravity="center"/>

</LinearLayout>