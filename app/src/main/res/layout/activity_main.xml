<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#c4f1ff"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cook Buddy"
        android:textSize="50sp"
        android:gravity="center"
        android:layout_weight="0.25"
        android:fontFamily="@font/permanent_markers"/>

    <Button
        android:id="@+id/see"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_weight="0.25"
        android:gravity="center"
        android:text="Items Available"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:fontFamily="@font/playfair_displays"
        android:background="@drawable/rounded_buttons"/>

    <Button
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Add Item"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_margin="20dp"
        android:layout_weight="0.25"
        android:fontFamily="@font/playfair_displays"
        android:background="@drawable/rounded_buttons"/>

    <Button
        android:id="@+id/cook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Suggest Dishes"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_margin="20dp"
        android:layout_weight="0.25"
        android:fontFamily="@font/playfair_displays"
        android:background="@drawable/rounded_buttons"/>

    <Button
        android:id="@+id/track"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Health Tracker"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_margin="20dp"
        android:layout_weight="0.25"
        android:visibility="gone"
        android:fontFamily="@font/playfair_displays"
        android:background="@drawable/rounded_buttons"/>

</LinearLayout>